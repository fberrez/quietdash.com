# Automatically install peer dependencies
auto-install-peers=true

# Use workspace protocol for local packages
link-workspace-packages=true

# Enable strict peer dependencies (recommended for monorepos)
strict-peer-dependencies=false

# Shared node_modules at the root
shamefully-hoist=false

# Enable workspace features
enable-pre-post-scripts=true

# Allow build scripts (required for native modules like canvas, prisma, bcrypt)
ignore-scripts=false
