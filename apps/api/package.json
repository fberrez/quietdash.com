{
  "name": "@quietdash/api",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "nest build && pnpm postbuild",
    "postbuild": "printf \"require('./apps/api/src/main');\\n\" > dist/main.js",
    "dev": "npx prisma migrate dev && nodemon --exec ts-node -r tsconfig-paths/register src/main.ts --watch src --ext ts",
    "start": "node dist/main",
    "start:prod": "NODE_ENV=production node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist",
    "generate:openapi": "node scripts/generate-openapi.js"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.15",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.15",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.4.15",
    "@nestjs/swagger": "^8.0.7",
    "@prisma/client": "^6.1.0",
    "@quietdash/shared": "*",
    "axios": "^1.7.9",
    "bcrypt": "^6.0.0",
    "canvas": "^3.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.4.2",
    "rxjs": "^7.8.1",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.7",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.15",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "nodemon": "^3.1.10",
    "prisma": "^6.1.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.2",
    "webpack": "^5.102.1",
    "webpack-node-externals": "^3.0.0"
  }
}
